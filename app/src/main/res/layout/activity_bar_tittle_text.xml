<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="45dp"
 >

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal|top|bottom"
        android:text="测试"
        android:textColor="#555555"
        android:textSize="20sp" />

    <Button
        android:id="@+id/title_btn1"
        android:layout_width="45dp"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_title_left_18dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="onClick"
        android:paddingLeft="5dp"
        android:textColor="#555555"
        android:textSize="15sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/title_btn2"
        android:layout_width="45dp"
        android:layout_height="fill_parent"
        android:layout_alignBaseline="@+id/title_text"
        android:layout_alignBottom="@+id/title_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_title_right_18dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="onClick"
        android:paddingLeft="5dp"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:visibility="invisible" />
</RelativeLayout>